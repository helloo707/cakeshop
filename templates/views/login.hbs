<!DOCTYPE html>
<html lang="en">
<head>
    {{>headers}}
    <style>
                .hero{
    height: 100%;
    width: 100%;
    background-image: linear-gradient(rgba(255, 119, 119, 0.244),rgba(232, 230, 230, 0.353)),url(/img/pxfuel.jpg);
    background-position: center;
    background-size: cover;
    position: absolute;
}
.form-box{
    width: 400px;
    height: 500px;
    position: relative;
    margin:15vh auto;
    background-color: aliceblue;
    padding: 5px;
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0px 0px 30px 9px rgb(202 118 145 / 78%);
}
.buttonbox{
    width: 225px;
    margin: 35px auto;
    position: relative;
    box-shadow: 0px 0px 30px 9px rgb(202 118 145 / 78%);
    border-radius: 20px;
}
.toggle-btn{
    padding: 10px 30px;
    cursor: pointer;
    background: transparent;
    border: 0px;
    outline: none;
    position: relative;
}
#btnn{
    top: 0;
    left: 0;
    position: absolute !important;
    width: 110px;
    height: 100%;
    background: linear-gradient(to right,#ff4c15 ,#ff9a81);
    border-radius: 20px;
    transition: 0.5s;
}
.social-icons{
    margin: 15px auto;
    text-align: center;
}
.social-icons img{
    width: 30px;
    margin: 0px 13px;
    box-shadow:0px 0px 8px 1px rgb(202 118 145 / 78%);
    cursor: pointer;
    border-radius: 10px;
}
.input-grp{
    top: 180px;
    position: absolute;
    width: 280px;
    transition: 0.5s;
    margin: 10px ;
}
.input-field{
    width: 100%;
    padding: 10px 0;
    border-top: 0;
    border-right: 0;
    border-left: 0;
    border-bottom: 1px solid rgb(202 118 145 / 78%);
    outline: none;
    background: transparent;
    bottom: 10px;
}
.submit-btn{
    width: 85%;
    padding: 10px 30px;
    cursor: pointer;
    display: block;
    margin: 30px auto;
    background: linear-gradient(to right,#ff4c15 ,#ff9a81);
    border: 0;
    outline:none;
    border-radius: 20px;
}
#login{
    left: 50px;
}
#register{
    left: 450px;
}
footer{
    margin-top: 100vh !important;
}
    </style>
</head>
<body>
    {{>navbar}}
     <div class="hero">
    <div class="form-box">
      <div class="buttonbox">
        <div id="btnn"></div>
        <button type="button" class="toggle-btn" onclick="login()">Log in</button>
        <button type="button" class="toggle-btn" onclick="register()">Register</button>
      </div>
      <form  id="login" action="/login" method="POST" class="input-grp" >
        <input type="email" name="email" class="input-field" placeholder="Email Id" required>
        <input type="text" name="password" class="input-field" placeholder="Password" required>
        <button type="submit" class="submit-btn" value="login">Login </button>
      </form>
      <form id="register" action="/register" method="post" class="input-grp"  >
        <input type="text" name="Name" class="input-field" placeholder="Name">
        <input type="email" name="email" class="input-field" placeholder="Email id" required>
        <input type="number" name="phone" class="input-field" placeholder="Phone Number" required>
        <input type="text" name="password" class="input-field" placeholder="Password" required>
        <input type="text" name="confirmpassword" class="input-field" placeholder="Confirm Password" required>
        <button type="submit" class="submit-btn" value="register">Register </button>
      </form>
      <div class="social-icons">
        <img src="/img/instagram.png" alt="">
        <img src="/img/facebook.png" alt="">
        <img src="/img/twitter.png" alt="">
    </div>
    </div>
  </div>
  <footer>
    {{>footer}}
  </footer>
</body>
<script >
    let x=document.getElementById("login");
    let y=document.getElementById("register");
    let z=document.getElementById("btnn")

    function register(){
      x.style.left="-400px";
      y.style.left="50px";
      z.style.left="110px";
    }
    function login(){
      x.style.left="50px";
      y.style.left="450px";
      z.style.left="0px";
    }
  </script>
</html>